<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtVw_pickImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Image"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/rl_img_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/rl_camera"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/imgVw_btmsht_cameraimg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_camera"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txtVw_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgVw_btmsht_cameraimg"
                        android:text="Camera"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_gallery"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_camera">

                    <ImageView
                        android:id="@+id/imgVw_btmsht_gallery"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_browse_image"
                       android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/txtVw_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgVw_btmsht_gallery"
                        android:text="Gallery"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"
                        />

                </RelativeLayout>

            </RelativeLayout>




</LinearLayout>